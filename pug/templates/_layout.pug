mjml
    //- Head
    mj-head
        mj-title upone
        mj-font(name="Roboto" href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap")/
        mj-font(name="FontAwesome" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css")/
        mj-font(name="Bootstrap Icons" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css")/
        mj-raw.
            <meta name="color-scheme" content="light"/>
            <meta name="supported-color-schemes" content="light"/>
            <meta name="format-detection" content="telephone=no"/>
            <meta name="format-detection" content="date=no"/>
            <meta name="format-detection" content="address=no"/>
            <meta name="format-detection" content="email=no"/>
        mj-attributes
            mj-text(font-family="Roboto, Arial, Helvetica, sans-serif")/
            mj-button(padding="20px 0" background-color="#e69435" vertical-align="middle" font-size="15px" font-weight="600" color="#ffffff" inner-padding="16px 20px" border-radius="15px")/
            mj-class(name="h2" align="center" font-size="25px" font-weight="400" line-height="25px" font-family="Roboto, Arial, Helvetica, sans-serif")/
            mj-class(name="p" font-size="15px" line-height="15px" font-weight="400" color="#000000" font-family="Roboto, Arial, Helvetica, sans-serif")/
            mj-class(name="Parg-1" align="center" padding="15px" font-size="15px" line-height="15px" font-weight="400" color="#000000" font-family="Roboto, Arial, Helvetica, sans-serif")/
            mj-class(name="Parg-2" align="center" padding="27px" font-size="15px" line-height="15px" font-weight="400" color="#000000" font-family="Roboto, Arial, Helvetica, sans-serif")/
            mj-class(name="tv" width="1px" padding="0px 5px" height="100px")
            mj-class(name="th")
        mj-breakpoint(width='480px')
        mj-style. 
            .pc{
                font-weight: 600;
                color: #e69435;
            }
    //- Body
    mj-body(background-color="#eeeeee" width="650px")       
        //- content
        block content
        //- buttontry
            block buttontry-3 
            include ../includes/_buttontry-3
        //- recommended
            block recommended
            include ../includes/_recommended
        //- footer
            block footer
            include ../includes/_footer